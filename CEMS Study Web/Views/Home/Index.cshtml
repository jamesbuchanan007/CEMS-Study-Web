<!-- Contact Modal -->
<div class="modal fade" id="ContactModal" tabindex="-1" role="dialog" aria-labelledby="ContactModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <img src="~/Resources/AppLogo.png" class="img-rounded" alt="Home" width="200" />
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <h2 class="modal-title" id="ContactModalLabel" style="margin-top: 10px">
                        Contact Form
                    </h2>
                </div>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <div class="col-md-3">
                            <label for="contact-firstName" style="margin-top: 10px">First Name:</label>
                        </div>
                        <div class="input-group col-md-9">
                            <span class="input-group-addon">
                                <i class="fa fa-user"></i>
                            </span>
                            <input type="text" class="form-control" id="contact-firstName" placeholder="First Name">
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <label for="contact-lastName" style="margin-top: 10px">Last Name:</label>
                        </div>
                        <div class="input-group col-md-9">
                            <span class="input-group-addon">
                                <i class="fa fa-user"></i>
                            </span>
                            <input type="text" class="form-control" id="contact-lastName" placeholder="Last Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <label for="contact-email" style="margin-top: 10px">Email:</label>
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-user"></i>
                            </span>
                            <input type="text" class="form-control" id="contact-email" placeholder="Email">
                        </div>
                    </div>
                    <div class="text-center">
                        <small id="emailHelp" class="text-muted">** We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group">

                        <label for="contact-textarea">Message</label>
                        <textarea class="form-control" id="contact-textarea" rows="3" placeholder="Message"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <div class="col-md-6 text-left">Captcha Code Here</div>
                <div class="col-md-6 text-right">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Send Message</button>
                </div>
            </div>
        </div>
    </div>
</div>

